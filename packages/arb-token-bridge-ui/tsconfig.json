{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src",
    "next.config.js",
    "next-env.d.ts",
    "additional.d.ts",
    ".next/types/**/*.ts",
    "build/types/**/*.ts",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@/images/*": ["./public/images/*"],
      "@/icons/*": ["./public/icons/*"],
      "@/token-bridge-sdk/*": ["./src/token-bridge-sdk/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "typeRoots": ["./node_modules/@types", "./tests/types"]
  },
  "exclude": ["node_modules"]
}
