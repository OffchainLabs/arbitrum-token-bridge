{
  "extends": "@synthetixio/synpress-tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "../../../",
    "types": ["cypress", "./cypress.d.ts", "@testing-library/cypress"],
    "outDir": "./output",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "paths": {
      "@synthetixio/synpress/cypress": [
        "node_modules/@synthetixio/synpress/cypress"
      ]
    }
  },
  "include": [
    "./cypress.config.ts",
    "./cypress.cctp.config.ts",
    "./support/*.*",
    "**/*.*"
  ],
  "files": ["environment.d.ts"]
}
