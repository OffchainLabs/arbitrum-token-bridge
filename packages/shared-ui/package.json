  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.3",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  }
}
