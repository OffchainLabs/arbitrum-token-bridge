{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./packages/arb-token-bridge-app/src/*"],
      "@/bridge/*": ["./packages/arb-token-bridge-ui/src/*"],
      "@/token-bridge-sdk/*": [
        "./packages/arb-token-bridge-ui/src/token-bridge-sdk/*"
      ],
      "@/icons/*": ["./packages/arb-token-bridge-app/public/icons/*"],
      "@/images/*": ["./packages/arb-token-bridge-app/public/images/*"],
      "@/public/*": ["./packages/arb-token-bridge-app/public/*"]
    }
  }
}
