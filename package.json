{
  "name": "arb-token-bridge",
  "version": "0.1.0",
  "main": "dist/index.js",
  "private": true,
  "dependencies": {
    "@rehooks/local-storage": "^2.3.0",
    "arb-provider-ethers": "^0.4.7",
    "ethers": "^4.0.44",
    "lodash.isequal": "^4.5.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "format": "prettier --config-precedence file-override --write \"src/**/*.{tsx,ts,scss,md}\"",
    "update:abi": "typechain --target ethers --outDir src/util/contracts './ABIs/*.json'",
    "prepare": "yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "prettier": "^2.0.2",
    "typechain": "^1.0.5",
    "typechain-target-ethers": "^1.0.4"
  },
  "files": [
    "./dist"
  ],
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
